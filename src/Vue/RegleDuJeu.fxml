               <children>
            <HBox alignment="TOP_RIGHT" prefHeight="9.0" prefWidth="657.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#btnFr" text="FR" />
                  <Button mnemonicParsing="false" onAction="#btnEn" text="EN" />
